<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('juken-logo-black.png' , size: '185x50'), "/" %>

  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">受験校の情報を入力</h2>
    <%= form_with model:@product, local: true do |f| %>

    <%= render 'shared/error_messages', model: @product %>

    <%# 受験校画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        受験校画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
    <%# /受験校画像 %>
    <%# 受験校と商品説明 %>
    <div class="new-items">
      <div class="weight-bold-text">
        受験校
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :product_name, class:"items-text", id:"item-name", placeholder:"受験校（必須 40文字まで)", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          受験校の説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :product_discription, class:"items-text", id:"item-info", placeholder:"受験校の（必須 1,000文字まで）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# /受験校と商品説明 %>

    <%# 受験の難易度 %>
    <div class="items-detail">
      <div class="weight-bold-text">受験の難易度</div>
      <div class="form">
        <div class="weight-bold-text">
          受験区分
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:product_category_id, ProductCategory.all,  :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        <div class="weight-bold-text">
          偏差値
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:product_condition_id, ProductCondition.all,  :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
      </div>
    </div>
    <%# /受験の難易度 %>

    <%# 受験会場 %>
    <div class="items-detail">
      <div class="weight-bold-text question-text">
        <span>受験会場</span>
        <a class="question" href="#">?</a>
      </div>
      <div class="form">
        <div class="weight-bold-text">
          共通テストボーダー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:shipping_burden_id, ShippingBurden.all,  :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
        <div class="weight-bold-text">
          試験場の場所
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:shipping_area_id, ShippingArea.all,  :id, :name, {}, {class:"select-box", id:"item-prefecture"}) %>
        <div class="weight-bold-text">
          宿泊要否（前泊・後泊）
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:days_to_ship_id, DaysToShip.all,  :id, :name, {}, {class:"select-box", id:"item-scheduled-delivery"}) %>
      </div>
    </div>
    <%# /受験会場 %>

    <%# 学納金等 総計 %>
    <div class="sell-price">
      <div class="weight-bold-text question-text">
        <span>学納金等 総計<br>(¥300〜9,999,999)</span>
        <a class="question" href="#">?</a>
      </div>
      <div>
        <div class="price-content">
          <div class="price-text">
            <span>価格</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen">¥</span>
          <%= f.text_field :purchase_price, class:"price-input", id:"item-price", placeholder:"例）300" %>
        </div>
        <div class="price-content">
          <span>販売手数料 (10%)</span>
          <span>
            <span id='add-tax-price'></span>円
          </span>
        </div>
        <div class="price-content">
          <span>販売利益</span>
          <span>
            <span id='profit'></span>円
        </div>
        </span>
      </div>
    </div>
    <%# /学納金等 %>

    <%# 注意書き %>
    <div class="caution">
      <p class="sentence">
        <a href="#">禁止されている出品、</a>
        <a href="#">行為</a>
        を必ずご確認ください。
      </p>
      <p class="sentence">
        またブランド品でシリアルナンバー等がある場合はご記載ください。
        <a href="#">偽ブランドの販売</a>
        は犯罪であり処罰される可能性があります。
      </p>
      <p class="sentence">
        また、出品をもちまして
        <a href="#">加盟店規約</a>
        に同意したことになります。
      </p>
    </div>
    <%# /注意書き %>
    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "出品する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <footer class="items-sell-footer">
    <ul class="menu">
      <li><a href="#">プライバシーポリシー</a></li>
      <li><a href="#">フリマ利用規約</a></li>
      <li><a href="#">特定商取引に関する表記</a></li>
    </ul>
    <%= link_to image_tag('juken-logo-black.png' , size: '185x50'), "/" %>
    <p class="inc">
      ©︎Furima,Inc.
    </p>
  </footer>
</div>